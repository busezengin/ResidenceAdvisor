<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/editTextRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="106dp"
        android:hint="E-mail"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="5dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="@+id/editTextRegisterApartmentId"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterSurname"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegisterEmail" />

    <EditText
        android:id="@+id/editTextRegisterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="51dp"
        android:hint="Name"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterSurname"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterSurname" />

    <EditText
        android:id="@+id/editTextRegisterSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="24dp"
        android:hint="Surname"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterApartmentId"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterApartmentId" />

    <EditText
        android:id="@+id/editTextRegisterApartmentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="25dp"
        android:hint="Apartment ID"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterApartmentNumber"
        app:layout_constraintStart_toStartOf="@+id/editTextRegisterApartmentNumber" />

    <EditText
        android:id="@+id/editTextRegisterApartmentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:hint="Apartment Number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>